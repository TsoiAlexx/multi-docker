{
    "AWSEBDockerrunVersion": 1,
    "containerDefinition": [
        {
            "name": "client",
            "image": "tsoialeksei17537/multi-client",
            "hostname": "client",
            "essensial": false,
            "memory": 128
        },
        {
            "name": "server",
            "image": "tsoialeksei17537/multi-server",
            "hostname": "api",
            "essensial": false,
            "memory": 128
        },
        {
           "name": "worker",
            "image": "tsoialeksei17537/multi-worker",
            "hostname": "worker",
            "essensial": false,
            "memory": 128 
        },
        {
            "name": "nginx",
            "image": "tsoialeksei17537/multi-nginx",
            "hostname": "nginx",
            "essensial": true,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links": ["client", "server"],
            "memory": 128
        }
    ]
}